@model List<Model.EF.Category>
@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<h2 class="title-1" style="text-align: center;">Danh sách danh mục</h2>
<button class="au-btn au-btn-icon au-btn--blue" data-toggle="modal" data-target="#categoryModal" style="float:right;"><i class="zmdi zmdi-plus"></i>Thêm danh mục</button>
<table class="table table-bordered" style="background-color:white">
    <thead>
        <tr>
            <td>Tên danh mục</td>
            <td>Thao tác</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="name-category">@item.Name</td>
                <td>
                    <button class="btn btn-info btn-update-category" data-toggle="modal" data-target="#productModal">Sửa</button>
                    <button class="btn btn-warning btn-delete-category" data-id="@item.ID_Category">Xoá</button>
                </td>
            </tr>
        }

    </tbody>
</table>
@using (Html.BeginForm("CreateOrProduct", "Admin", FormMethod.Post))
{
    <div class="modal fade" id="categoryModal" role="dialog">
        <div class="modal-dialog">
            <form id="form-product" action="" method="post">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">THÔNG TIN DANH MỤC</h5>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="name">Tên danh mục:</label>
                            <input id="modal-name-product" type="text" class="form-control" placeholder="Enter answer" name="name"><br />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-sm btn-purple">
                            <i class="ace-icon fa fa-floppy-o bigger-125"></i>
                            <span class="bigger-110">Lưu</span>
                        </button>
                        <button id="btn-reset" type="reset" class="width-35 pull-right btn btn-sm">
                            <i class="ace-icon fa fa-refresh"></i>
                            <span class="bigger-110">Reset</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}




