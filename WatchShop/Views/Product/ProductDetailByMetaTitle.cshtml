@model Model.EF.Product
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout_client.cshtml";
    var listProductByTrademark = (List<Model.EF.Product>)ViewBag.listProductByTrademark;
}
<style>
    .limiter-menu-desktop {
        background-color: darkslategray;
    }
</style>
<!-- Product Detail -->
<section class="sec-product-detail bg0 p-b-60" style="margin-top: 130px;">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-7 p-b-30">
                <div class="p-l-25 p-r-30 p-lr-0-lg">
                    <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>
                    <div class="slick3 gallery-lb">
                        <div class="item-slick3" data-thumb="/Assets/Client/images/@Model.Avatar">
                            <div class="wrap-pic-w pos-relative">
                                <img src="/Assets/Client/images/@Model.Avatar" alt="IMG-PRODUCT">
                                <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="/Assets/Client/images/@Model.Avatar">
                                    <i class="fa fa-expand"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-5 p-b-30">
                <div class="p-r-50 p-t-5 p-lr-0-lg">
                    <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                        Tên sản phẩm : @Model.Name
                    </h4>
                    @if (@Model.Discount != null)
                    {
                        <span class="mtext-106 cl2">
                            Giá bán : <strike>@Model.Price.GetValueOrDefault(0).ToString("N0") đ</strike>
                        </span>
                        <br />
                        <span class="mtext-106 cl2">
                            Khuyến mãi : @Model.Discount.GetValueOrDefault(0).ToString("N0") đ
                        </span>
                    }
                    else
                    {
                        <span class="mtext-106 cl2">
                            Giá bán : @Model.Price.GetValueOrDefault(0).ToString("N0") đ
                        </span>
                    }
                    <p class="mtext-106 cl3 p-t-23">
                        Mô tả : @Model.Description
                    </p>
                    <p class="mtext-106 cl3 p-t-23">
                        Màu sắc : @Model.Color
                    </p>
                    <div class="p-t-33">
                        <div class="flex-w flex-r-m p-b-10">
                            <div class="size-204 flex-w flex-m respon6-next">
                                <div class="product-add-cart flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
                                    <a href="/themgiohang?id=@Model.ID_Product&quantity=1" class="btn btn-fill" style="color: white;">Thêm giỏ hàng</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="bor10 m-t-50 p-t-43 p-b-40">
            <div class="tab01">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item p-b-10">
                        <a class="nav-link active" data-toggle="tab" href="#description" role="tab" style="font-size: 30px;">Nội dung</a>
                    </li>
                </ul>
                <div class="tab-content p-t-43">
                    <div class="tab-pane fade show active" id="description" role="tabpanel">
                        <div class="how-pos2 p-lr-15-md">
                            <p class="stext-106 cl6">
                                @Model.Content
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Related Products -->
<section class="sec-relate-product bg0 p-t-45 p-b-105">
    <div class="container">
        <div class="p-b-45">
            <h3 class="ltext-106 cl5 txt-center">
                SẢN PHẨM LIÊN QUAN
            </h3>
        </div>
        <div class="wrap-slick2">
            <div class="slick2">
                @foreach (var item in listProductByTrademark)
                {
                    <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
                        <div class="block2" style="background-color: antiquewhite;">
                            <div class="block2-pic hov-img0">
                                <img src="/Assets/Client/images/@item.Avatar" alt="IMG-PRODUCT" style="max-height: 270px;">
                                <a href="/themgiohang?id=@item.ID_Product&quantity=1" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                    Thêm giỏ hàng
                                </a>
                            </div>
                            <div class="block2-txt flex-w flex-t p-t-14" style="text-align:-webkit-center;">
                                <div class="block2-txt-child1 flex-col-l ">
                                    <a href="/chitietsanpham?name=@item.Metatitle" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6" style="font-size: 16px;">
                                        @item.Name
                                    </a>
                                    <span class="stext-105 cl3" style="font-size: 16px;">
                                        @item.Price.GetValueOrDefault(0).ToString("N0") đ
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

